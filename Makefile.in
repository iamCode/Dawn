# Manual Compile process this makefile is based on
# (Works on Ubuntu Jaunty, lua is often installed differently on 
#    other distros)
#
# g++ -c *.cpp -I/usr/include/GL -I/usr/include/freetype2 -I/usr/include/lua5.1
# g++ -o dawn *.o -lSDL -lSDL_image -lGL -llua5.1 -ltolua++5.1 -lfreetype -llibglut
#
CC=g++
LIBS= -lSDL -lSDL_image -lGL -llua5.1 -ltolua++5.1 -lfreetype -lglut -lGLU
CCFLAGS= -I/usr/include/GL -I/usr/include/freetype2 -I/usr/include/lua5.1 -Isrc/threadObject

all: dawn;
	rm *.o;
	rm config.*

dawn: main debug CharacterInfoScreen inventory GLFT_Font CZone utils CMessage CInterface CTexture CSpell CAction CCharacter CEditor cameraFocusHandler CLuaInterfaceGenerated CLuaFunctions item StatsSystem Player CNPC tooltip Spellbook ActionBar InventoryScreen optionswindow interactionpoint elements callindirection BuffWindow questwindow textwindow GLee loadingscreen EventClass MutexClass Thread
	$(CC) $(CCFLAGS) -o dawn main.o inventory.o CharacterInfoScreen.o utils.o debug.o GLFT_Font.o CZone.o CMessage.o CInterface.o CTexture.o CSpell.o CAction.o CCharacter.o CEditor.o cameraFocusHandler.o CLuaInterfaceGenerated.o CLuaFunctions.o item.o StatsSystem.o Player.o CNPC.o tooltip.o ActionBar.o Spellbook.o InventoryScreen.o optionswindow.o interactionpoint.o elements.o callindirection.o BuffWindow.o questwindow.o textwindow.o GLee.o loadingscreen.o EventClass.o MutexClass.o Thread.o $(LIBS) 

